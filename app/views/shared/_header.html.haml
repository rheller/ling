%section#top-header.row
  %h1.col-md-2
    = link_to "Ling", home_path
  %ul.col-md-4.clearfix
  - if current_user
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name || current_user.email}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              = link_to "Update Account", edit_user_path(current_user)
              = link_to "Sign Out", destroy_user_session_path, :method => :delete

