
%p
= @original.spelling

= form_for :card, :url => cards_path do |f|
  = f.hidden_field :original_id,   value: @original.id
  = f.hidden_field :translation_id, value: @translation.id
  = f.hidden_field :distractor1_id, value: @distractors.first.id
  = f.hidden_field :distractor2_id, value: @distractors.last.id

  =@distractors.first.spelling
  = f.radio_button :chosen_id, @distractors.first.id, id: 'column_a'
  =@distractors.last.spelling 
  = f.radio_button :chosen_id, @distractors.last.id, id: 'column_b'
  = @translation.spelling 
  = f.radio_button :chosen_id, @translation.id, id: 'column_c'
  = f.submit



